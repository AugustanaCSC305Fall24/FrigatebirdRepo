<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="enterButton" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.augustana.VisualPracticeModeUIController">
   <children>
      <Button fx:id="backButton" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#backToHomeAction" text="BACK" />
      <TextField fx:id="morseInput" layoutX="307.0" layoutY="200.0" onAction="#checkMorseCode" prefHeight="43.0" prefWidth="200.0" style="-fx-border-color: black;">
         <padding>
            <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
         </padding>
      </TextField>
      <Label alignment="CENTER" layoutX="213.0" layoutY="27.0" prefHeight="17.0" prefWidth="157.0" text="Practice Mode" textAlignment="JUSTIFY" textFill="#111111">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <Label layoutX="129.0" layoutY="65.0" text="Enter the Morse Code for alphabets/symbols shown below:">
         <font>
            <Font name="AppleGothic Regular" size="13.0" />
         </font>
      </Label>
      <Label layoutX="307.0" layoutY="170.0" style="-fx-border-color: black;" text="Your Translation goes here:" />
      <TextField fx:id="letterDisplay" alignment="CENTER" editable="false" layoutX="55.0" layoutY="136.0" onAction="#displayLetterAndCheckMorse" prefHeight="171.0" prefWidth="206.0" style="-fx-border-color: blue;">
         <font>
            <Font name="Arial Black" size="96.0" />
         </font>
      </TextField>
      <Button layoutX="370.0" layoutY="278.0" mnemonicParsing="false" onAction="#displayLetterAndCheckMorse" text="Refresh" />
   </children>
</AnchorPane>
