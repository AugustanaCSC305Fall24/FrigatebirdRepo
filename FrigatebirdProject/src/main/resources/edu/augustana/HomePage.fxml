<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="287.0" prefWidth="339.0" spacing="20.0" style="-fx-background-color: #fdf5e6;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.augustana.HomePageController">
   <children>
      <Label alignment="TOP_CENTER" style="-fx-text-fill: #ff4500;" text="WELCOME TO DEEP SIGNAL">
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <font>
            <Font name="Chalkboard SE Regular" size="18.0" />
         </font>
      </Label>
      <Button onAction="#switchToSenderRadio" style="-fx-background-color: #ff6347; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5; -fx-background-radius: 5;" text="Sender Radio" />
      <Button onAction="#switchToReceiverRadio" style="-fx-background-color: #4682b4; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5; -fx-background-radius: 5;" text="Receiver Radio" />
      <Button mnemonicParsing="false" onAction="#switchToPracticeMode" style="-fx-background-color: #ffa07a; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5; -fx-background-radius: 5;" text="Practice Mode" />
      <Button mnemonicParsing="false" onAction="#switchToAISceneMode" style="-fx-background-color: #ffa07a; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5; -fx-background-radius: 5;" text="Avalanche AI" />
      <Button mnemonicParsing="false" onAction="#switchtoGeminiAI" text="Gemini AI" />
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
